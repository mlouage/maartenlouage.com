---
import Layout from '../layouts/Layout.astro';
import NewsletterCard from '../components/NewsletterCard.astro';

const featuredNewsletters = [
  { title: "The DevOps Handbook", description: "Weekly guide to mastering DevOps", subscribers: 5500, image: "/images/devops.jpg" },
  { title: "Fullstack Roadmap", description: "Learn how to become a fullstack developer", subscribers: 3200, image: "/images/fullstack.jpg" },
  { title: "Machine Learning 101", description: "Understand the basics of machine learning", subscribers: 7800, image: "/images/ml.jpg" },
  { title: "JavaScript Weekly", description: "Stay up to date with the latest in JavaScript", subscribers: 12300, image: "/images/js.jpg" },
  { title: "Web3 Explained", description: "A beginner's guide to Web3", subscribers: 9100, image: "/images/web3.jpg" },
];

const trendingNewsletters = [
  { title: "Productive Developer", description: "Boost your coding productivity", subscribers: 4800, image: "/images/productivity.jpg" },
  { title: "GraphQL Deep Dive", description: "Master the ins and outs of GraphQL", subscribers: 6200, image: "/images/graphql.jpg" },
  { title: "Design Patterns Explained", description: "Learn the most common design patterns", subscribers: 2300, image: "/images/design-patterns.jpg" },
  { title: "React Performance Tips", description: "Optimize your React applications", subscribers: 8100, image: "/images/react.jpg" },
  { title: "API Integration Guide", description: "Get started with API integrations", subscribers: 5400, image: "/images/api.jpg" },
];

const moreNewsletters = [
  { title: "Tech Leadership Insights", description: "Expert advice for tech leaders", subscribers: 3600, image: "/images/leadership.jpg" },
  { title: "Python Mastery Course", description: "Comprehensive Python programming course", subscribers: 9500, image: "/images/python.jpg" },
  { title: "Docker for Beginners", description: "Learn the basics of Docker containerization", subscribers: 1700, image: "/images/docker.jpg" },
  { title: "Vue.js Component Library", description: "Build reusable UI components with Vue.js", subscribers: 7300, image: "/images/vue.jpg" },
  { title: "Serverless Fundamentals", description: "Understand the core concepts of serverless architecture", subscribers: 4200, image: "/images/serverless.jpg" },
];
---

<Layout title="Dev Digest - The best software engineering newsletters">
  <main class="container mx-auto px-4 py-8">
    <section class="mb-12">
      <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg p-8 text-white">
        <h1 class="text-4xl font-bold mb-4">The best software engineering newsletters in one place</h1>
        <div class="flex">
          <input type="text" placeholder="Search for a newsletter" class="flex-grow rounded-l-md px-4 py-2 text-gray-800">
          <button class="bg-accent text-white px-6 py-2 rounded-r-md">Go</button>
        </div>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Featured Newsletters</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
        {featuredNewsletters.map(newsletter => (
          <NewsletterCard {...newsletter} />
        ))}
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Trending</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
        {trendingNewsletters.map(newsletter => (
          <NewsletterCard {...newsletter} />
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-bold mb-4">More from Dev Digest</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
        {moreNewsletters.map(newsletter => (
          <NewsletterCard {...newsletter} />
        ))}
      </div>
    </section>
  </main>
</Layout>